<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activityDetails.ActivityDetailFragment" >

    <ImageView
        android:id="@+id/testMap"
        android:layout_width="346dp"
        android:layout_height="354dp"
        android:contentDescription="@string/todo"
        android:src="@android:drawable/ic_menu_mapmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/detailRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/baseline_rectangle_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/jogging_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/notosans"
        android:text="@string/jogging"
        android:textColor="@color/lighter_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/detailRectangle"
        app:layout_constraintStart_toStartOf="@+id/detailRectangle"
        app:layout_constraintTop_toTopOf="@+id/detailRectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>